  const routes = [
  { path: '/cards', Component: DeckofCards }

]


  
  
  {routes.map(({ path, Component}) => (
    <Route key={ path } exact path={path}>
      {({ match}) => (
        <CSSTransition 
        in={match !== null}
        timeout={300} 
        classNames='fade'
        unmountOnExit 
        >
          <div className='fade'>
            <Component/>
          </div>
        </CSSTransition>
      )}
    </Route>
  ))}